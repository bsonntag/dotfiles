#Basics
alias curdir="basename `pwd`"
alias hist-find="history | grep"
alias la="ls -A"
alias ll="ls -l"
alias ls="ls -Gh --color --group-directories-first"
alias lsa="ls -lA"
alias rmr="rm -rf"

# Alias for RoR
alias r="rails"
alias migrate="bundle exec rake db:migrate && bundle exec rake db:migrate RAILS_ENV=test"
alias rollback="bundle exec rake db:rollback && bundle exec rake db:rollback RAILS_ENV=test"

# Alias for git
alias ga.="git add ."
alias gdm="git diff master"
alias gfr="gfo && gro"
alias glg="git lg"
alias gro="git rebase origin/master"
alias gst="git status -sb"

# Alias for node and npm
alias nr="npm run -s"
alias ns="npm start"
alias nt="npm test -s"

# Alias for tmux
alias t="tmux"
alias ta="tmux attach -t"
alias tl="tmux ls"
alias tn="tmux new -s"
alias tw="tmux-work"

# Writing less
alias b='bundle'
alias be='bundle exec'
alias cuke='cucumber'
alias g='git'
alias n='npm'
alias nd='node'
